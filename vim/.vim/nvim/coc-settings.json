{
    "coc.source.word.shortcut": "SP",
    "coc.source.buffer.disableSyntaxes": ["comment"],
    "coc.source.around.disableSyntaxes": ["comment"],
    "coc.source.file.disableSyntaxes": ["comment"],
    "coc.source.word.filetypes": ["comment", "markdown", "gitcommit"],

    "diagnostic.errorSign": "",
    "diagnostic.warningSign": "",
    "diagnostic.enableHighlightLineNumber": false,
    "diagnostic.refreshOnInsertMode": true,
    "diagnostic.refreshAfterSave": true,
    "diagnostic.displayByAle": true,

    "suggest.echodocSupport": true,
    "suggest.maxCompleteItemCount": 20,

    "snippets.userSnippetsDirectory": "~/.vim/UltiSnips/",
    "snippets.priority": 1000,
    "snippets.extends": {
        "javascript.jsx": ["javascript"],
        "javascriptreact": ["javascript"]
    },
    "snippets.ultisnips.enable": true,
    "snippets.ultisnips.directories": ["~/.vim/UltiSnips/", "UltiSnips"],

    "tsserver.npm": "which npm",

    "suggest.enablePreview": true,

    "python.linting.pylintEnabled": true,

    "typescript.showUnused": false,
    "typescript.suggestionActions.enabled": false,

    "javascript.suggestionActions.enabled": false
}
