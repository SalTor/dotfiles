macos-titlebar-style = hidden
theme = Catppuccin Frappe

font-family = Maple Mono NF
font-size = 12
font-thicken = true
adjust-cell-height = 2

window-padding-x = 10
window-padding-y = 10

# Disable ligatures
font-feature = -liga
font-feature = -calt
font-feature = -dlig

mouse-hide-while-typing = true

keybind = performable:ctrl+shift+r=reload_config

# My tmux bindings
# Sends Ctrl-b N for tmux next window
keybind = cmd+right_bracket=text:\x02n
keybind = cmd+shift+right_bracket=text:\x02n

# Sends Ctrl-b P for tmux previous window
keybind = cmd+left_bracket=text:\x02p
keybind = cmd+shift+left_bracket=text:\x02p

# Sends Ctrl-b S for tmux show sessions
keybind = cmd+;=text:\x02s
