macos-titlebar-style = hidden
theme = catppuccin-frappe

font-family = Maple Mono NF
font-size = 15
font-thicken = true
adjust-cell-height = 2

window-padding-x = 10
window-padding-y = 10

# Disable ligatures
font-feature = -liga
font-feature = -calt
font-feature = -dlig

mouse-hide-while-typing = true

keybind = ctrl+shift+r=reload_config
# My tmux bindings
# Sends Ctrl-b N for tmux next window
keybind = cmd+]=text:\x02n
keybind = cmd+shift+]=text:\x02n
# Sends Ctrl-b P for tmux previous window
keybind = cmd+[=text:\x02p
keybind = cmd+shift+[=text:\x02p
# Sends Ctrl-b S for tmux show sessions
keybind = cmd+;=text:\x02s
