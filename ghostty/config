macos-titlebar-style = hidden
theme = catppuccin-frappe

# font-family = JetBrainsMono NFM # this is the default
font-style = Regular
font-size = 12
font-thicken = false
# adjust-cell-height = 0

# Disable ligatures
font-feature = -liga
font-feature = -calt
font-feature = -dlig

# Comfortable margins
window-padding-x = 10
window-padding-y = 10

mouse-hide-while-typing = true

# My tmux bindings
# Sends Ctrl-b N for tmux next window
keybind = cmd+]=text:\x02n
# Sends Ctrl-b P for tmux previous window
keybind = cmd+[=text:\x02p
# Sends Ctrl-b S for tmux show sessions
keybind = cmd+;=text:\x02s
